if giv=2 then giv=0&proc give_#%object#use_object_1$$_#%character#char$$&pln
clsb
pln #%room#room$$
pln #%text$
proc any_purpose_event
instr text=
pln  #%room#room$_text$
ooo=-1
proc show_objects
pln
proc show_characters
pln
if mode=0 then proc main_menu
if mode=1 then proc exits_menu
if mode=2 then proc rest
if mode=3 then ooo=0&proc examine_objects
if mode=4 then ooo=#room$&proc examine_objects
